				return "horizontal layout wrap flex center center-justified " + "flex";
			},
			notify: true
		},
		containerDivLayoutClasses:{
			type: Object,
			value: 
			{	"phone": "vertical layout flex",
				"ninePanel": "horizontal layout flex wrap",
				"fourPanel": "horizontal layout flex wrap", 
				"linear": "horizontal layout"
			},
			notify: true
		},
		oneDivLayoutClasses: {
			type: Object,
			value: 
			{	"phone": "vertical layout",
				"ninePanel": "vertical layout flex nowrap flex-3",
				"fourPanel": "vertical layout flex nowrap flex-6", 
				"linear": "horizontal layout"
			},
			notify: true
		},	
		// beginDiv:{
